<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
  <div class="input-field">
    <input id="title" type="text" class="validate" name="title" value="{{course.title}}" required>
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Wrong name"></span>
  </div>

  <div class="input-field">
    <input id="price" type="number" class="validate" name="price" value="{{course.price}}" required min="100">
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Wrong price"></span>
  </div>

  <div class="input-field">
    <input id="image" type="text" class="validate" name="img" value="{{course.img}}" required>
    <label for="img">Course image</label>
    <span class="helper-text" data-error="Wrong image"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}">

  <button type="submit" class="btn btn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{ course.id }}">
  <button type="submit" class="btn red">Remove course</button>
</form>
