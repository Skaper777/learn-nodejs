<h1>Add new course</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" type="text" class="validate" name="title" required>
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Wrong name"></span>
  </div>

  <div class="input-field">
    <input id="price" type="number" class="validate" name="price" required min="100">
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Wrong price"></span>
  </div>

  <div class="input-field">
    <input id="image" type="text" class="validate" name="img" required>
    <label for="img">Course image</label>
    <span class="helper-text" data-error="Wrong image"></span>
  </div>

  <button class="btn btn-primary">Add course</button>
</form>
